      <service behaviorConfiguration="serviceBehavior" name="Project.Communication.Module.ClassService">
        <clear />
        <endpoint address="ClassService" binding="netTcpBinding" bindingConfiguration="basicNetTcp"
           name="basicNetTcp" contract="Project.Communication.Module.IClassLService"
           behaviorConfiguration="customQuotaBehavior"
           listenUriMode="Explicit" />
        <endpoint address="ClassService" binding="netNamedPipeBinding"
           bindingConfiguration="basicNetNamedPipe" name="basicNetPipe"
           behaviorConfiguration="customQuotaBehavior"
           contract="Project.Communication.Module.IClassLService" />
        <endpoint binding="mexHttpBinding" name="mex" contract="IMetadataExchange"
           listenUriMode="Explicit" />
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:9124" />
            <add baseAddress="http://localhost:8000" />
            <add baseAddress="net.pipe://localhost" />
          </baseAddresses>
        </host>
